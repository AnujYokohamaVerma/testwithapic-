@model MyProperty


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-black"> Creat New Property</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0">
            </label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder" class="p-0">
            </label>
            <input asp-for="DisplayOrder" class="form-control" />
        </div>
        <div class="row">
            <div class="col-6">
                <botton typeof="submit" class="btn btn-primary form-control" style="float:left">
                    Create
                </botton>
            </div>
            <div class="col-6">
                <a asp-controller="MyProperty" asp-action="Index" class="btn btn-secondary form-control" style="float:right">
                    Back To List
                </a>
            </div>
        </div>



    </div>
</form>
