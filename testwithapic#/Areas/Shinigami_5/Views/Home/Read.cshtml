@model Articles
<form method="post">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-black text-uppercase">@Model.Title</h3>
                </div>
                <div class="col-12 text-center">
                    <p class="text-black-50 fw-semibold mb-0">@Model.Summary</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.ImageFile" width="100%" class="rounded" />
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50 col-6"> Date Created: @Model.CreatedDate</h6>
                            <h6 class="text-dark text-opacity-50 col-6"> Date Edited: @Model.ModifiedDate</h6>
                        </div>
                        <div class="row pl-2 my-3">
                            <textarea asp-for="Artical" class="form-control summernote-readonly" style="background-color: #d9e3f0;"></textarea>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                <a asp-action="Index" class="btn btn-primary mb-5 text-uppercase">
                                    <small>Back To Home</small>
                                </a>
                                
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-bs4.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-bs4.min.js"></script>
    <style>
        .note-frame {
            background-color: cadetblue !important;
            color: black;
            padding: 0px; /* Optional: Add padding for better appearance */
        }

        .note-frame {
            padding: 0px; /* Optional: Add padding for better appearance */
        }
    </style>
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                toolbar:[],
                disable: true,
                height: 300,
                minHeight: null,
                maxHeight: null,
                focus: false,


            });
            $('.summernote').summernote('disable');
        });
    </script>
}
