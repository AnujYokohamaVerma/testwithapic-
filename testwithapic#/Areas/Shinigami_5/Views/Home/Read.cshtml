@model Articles
<form method="post">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-black text-uppercase">@Model.Title</h3>
                </div>
                <div class="col-12 text-center">
                    <p class="text-black-50 fw-semibold mb-0">@Model.Summary</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.ImageFile" width="100%" class="rounded" />
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50 col-6"> Date Created: @Model.CreatedDate</h6>
                            <h6 class="text-dark text-opacity-50 col-6"> Date Edited: @Model.ModifiedDate</h6>
                        </div>
                        <div class="row pl-2 my-3">
                            <p class="text-seconday lh-sm">@Html.Raw(Model.Artical)</p>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                <a asp-action="Index" class="btn btn-primary mb-5 text-uppercase">
                                    <small>Back To Home</small>
                                </a>
                                
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>
