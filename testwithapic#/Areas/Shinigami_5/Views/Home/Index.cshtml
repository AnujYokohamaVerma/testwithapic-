@model IEnumerable<Articles>

<div calss="row pb-3">
    @foreach(var articals in Model)
    {
        <div class="col-3">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@articals.ImageFile" class="card-img-top rounded"/>
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="cardcard-title h5 text-dark opacity-75 text-uppercase text-center">@articals.Title</p>
                                <p class="cardcard-title text-dark opacity-75 text-center">@articals.Summary</p>
                            </div>
                        </div>
                        <div class="pl-1">
                            <a asp-action="Read" asp-route-id="@articals.Id" class="btn btn-primary bg-gradient border-0 form-control">
                                Read
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>