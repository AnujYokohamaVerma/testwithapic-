@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient modal-lg py-3">
        <div class="row">
            <div class="col-12 text-center border-5 border-black">
                <h2 class="text-opacity-50 text-dark py-2"> Edit Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-0 row">
        <form method="post">
            <div class="border p-3 mt-0">
                <div asp-validation-summary="All"></div>
                <div class="mb-3 row p-1">
                    <label asp-for="Name" class="p-0">
                    </label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class=" text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="DisplayOrder" class="p-0">
                    </label>
                    <input asp-for="DisplayOrder" class="form-control" />
                    <span asp-validation-for="DisplayOrder" class=" text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6">
                        <button typeof="submit" class="btn btn-primary form-control" style="float:left">
                            Update
                        </button>
                    </div>
                    <div class="col-6">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control" style="float:right">
                            Back To List
                        </a>
                    </div>
                </div>



            </div>
        </form>
    </div>
    <div class="card-footer p-2 row">
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}