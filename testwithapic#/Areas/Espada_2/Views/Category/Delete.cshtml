@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient modal-lg py-3">
        <div class="row">
            <div class="col-12 text-center border-5 border-black">
                <h2 class="text-opacity-50 text-dark py-2"> Delete Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-0 row">
        <form method="post">
            <div class="border p-3 mt-0">
                <div class="mb-3 row p-1">
                    <label asp-for="Name" class="p-0">
                    </label>
                    <input asp-for="Name" disabled class="form-control" />

                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="DisplayOrder" class="p-0">
                    </label>
                    <input asp-for="DisplayOrder" disabled class="form-control" />

                    <div class="row">
                        <div class="col-6">
                            <button typeof="submit" class="btn btn-danger form-control" style="float:left">
                                Delete
                            </button>
                        </div>
                        <div class="col-6">
                            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control" style="float:right">
                                Back To List
                            </a>
                        </div>
                    </div>



                </div>
        </form>
    </div>
    <div class="card-footer p-2 row">
    </div>
</div>

