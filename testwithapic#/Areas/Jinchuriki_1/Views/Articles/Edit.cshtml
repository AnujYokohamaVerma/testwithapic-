@model Articles

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient modal-lg py-3">
        <div class="row">
            <div class="col-12 text-center border-5 border-black">
                <h2 class="text-opacity-50 text-dark py-2"> Edit Articles</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-0 row">
        <form method="post" enctype="multipart/form-data">
            <input asp-for="ImageFile" hidden/>
            <div class="row">
                <div class="col-8">
                    <div class="border p-3 mt-0">
                        <div asp-validation-summary="All"></div>
                        <div class="mb-3 row p-1">
                            <label asp-for="Title" class="p-0">
                            </label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class=" text-danger"></span>
                        </div>
                        <div class="mb-3 row p-1">
                            <label asp-for="Summary" class="p-0"></label>
                            <input asp-for="Summary" class="form-control" />
                            <span asp-validation-for="Summary" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row p-1">
                            <label asp-for="Artical" class="p-0"></label>
                            <textarea asp-for="Artical" class="form-control summernote"></textarea>
                            <span asp-validation-for="Artical" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row p-1">
                            <label asp-for="ImageFile" class="p-0"></label>
                            <input type="file" name="file" class="form-control" />
                        </div>
                        <div class="mb-3 row p-1">
                            <label asp-for="CreatedDate" class="p-0"></label>
                            <input asp-for="CreatedDate" disabled class="form-control" />
                        </div>
                        <div class="mb-3 row p-1">
                            <label asp-for="ModifiedDate" class="p-0"></label>
                            <input asp-for="ModifiedDate" disabled class="form-control" />
                        </div>
                        <div class="row mt-5">
                            <div class="col-6">
                                <button type="submit" class="btn btn-primary form-control" style="float:left">
                                    Update
                                </button>
                            </div>
                            <div class="col-6">
                                <a asp-controller="Articles" asp-action="Index" class="btn btn-secondary form-control" style="float:right">
                                    Back To List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <img src="@Model.ImageFile" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />

                </div>
            </div>
            
        </form>
    </div>
    <div class="card-footer p-2 row">
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-bs4.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-bs4.min.js"></script>
    <style>
        .note-editable {
            background-color: #f0f5fa;
            color: black;
            padding: 10px; /* Optional: Add padding for better appearance */
        }

        .note-frame {
            padding: 0px; /* Optional: Add padding for better appearance */
        }
    </style>
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 300,
                minHeight: null,
                maxHeight: null,
                focus: true
            });
        });
    </script>
}